{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@/features/*": ["./features/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./features/shared/infrastructure/types"
    ]
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "features/**/*.ts",
    "features/**/*.tsx",
    "features/shared/infrastructure/types/*.d.ts"
  ]
}
