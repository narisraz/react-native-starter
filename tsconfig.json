{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./app/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./app/shared/infrastructure/types"
    ]
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/shared/infrastructure/types/*.d.ts"
  ]
}
